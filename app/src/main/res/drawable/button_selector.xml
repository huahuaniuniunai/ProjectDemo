<?xml version="1.0" encoding="utf-8"?>
<!--设置Button选择器，TextView选择器需要放置在 res/corlor目录下-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--被选中时的显示效果,一定要按这个循序写，否则效果会覆盖-->
    <item android:drawable="@drawable/shape" android:state_pressed="true"/>

    <!--正常情况下的显示效果-->
    <item android:drawable="@drawable/shape_login" android:state_pressed="false"/>

</selector>
