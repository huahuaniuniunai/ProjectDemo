<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--标题栏背景颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/gray</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/white</item>
        <!--底部导航栏颜色-->
        <item name="android:navigationBarColor">@color/gray</item>
        <!--Appbar背景色-->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <!--ToolBar上的Title颜色-->
<!--        <item name="android:textColorPrimary">@color/gray</item>-->
        <!--各个控制控件的默认颜色-->
        <item name="android:colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="LauncherTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!--是否充满全屏-->
        <item name="android:windowFullscreen">false</item>
        <!--屏幕背景颜、图片或布局-->
<!--        <item name="android:windowBackground">@drawable/img_launcher</item>-->
        <item name="android:windowBackground">@drawable/splash_logo_welcome</item>
    </style>

</resources>
