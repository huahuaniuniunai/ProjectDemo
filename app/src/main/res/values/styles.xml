<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!--控制各个控件被选中时的颜色，如：光标、单选框、复选框等-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/welcome</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--标题栏背景颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/gray</item>
        <!--控制各个控件被选中时的颜色，如：光标、单选框、复选框等-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/white</item>
        <!--底部导航栏颜色-->
        <item name="android:navigationBarColor">@color/gray</item>
        <!--Appbar背景色-->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <!--ToolBar上的Title颜色-->
<!--        <item name="android:textColorPrimary">@color/gray</item>-->
        <!--各个控制控件的默认颜色-->
        <item name="android:colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="LauncherTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--是否设置标题栏-->
        <item name="android:windowNoTitle">true</item>
        <!--是否设置ActionBar-->
        <item name="android:windowActionBar">false</item>
        <!--是否充满全屏-->
        <item name="android:windowFullscreen">false</item>
        <!--屏幕背景颜、图片或布局-->
<!--        <item name="android:windowBackground">@drawable/img_launcher</item>-->
        <item name="android:windowBackground">@drawable/splash_logo_welcome</item>
    </style>

    <!--自定义Dialog样式-->
    <style name="MyDialog" parent="AlertDialog.AppCompat">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!--顶部弹出Dialog动画-->
    <style name="TopAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_top_out</item>
    </style>

    <!--底部弹出Dialog动画-->
    <style name="BottomAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
    </style>

    <!--左边弹出Dialog动画-->
    <style name="LeftAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_left_in</item>
        <item name="android:windowExitAnimation">@anim/anim_left_out</item>
    </style>

    <!--右边弹出Dialog动画-->
    <style name="RightAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_right_in</item>
        <item name="android:windowExitAnimation">@anim/anim_right_out</item>
    </style>

</resources>
