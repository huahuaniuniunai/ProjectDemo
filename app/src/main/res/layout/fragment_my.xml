<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar_my" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1、启动Activity携带参数及回调"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bt_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2、动态加载布局"/>

            <Button
                android:id="@+id/bt_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3、RecycleView"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bt_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4、登陆界面"/>

            <Button
                android:id="@+id/bt_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5、通讯录联系人"/>

            <Button
                android:id="@+id/bt_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6、通讯录增删改查"/>

            <Button
                android:id="@+id/bt_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7、检查更新"/>

            <Button
                android:id="@+id/bt_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8、跑马灯"/>

            <Button
                android:id="@+id/bt_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9、XUpdate"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bt_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10、获取动态权限"/>

            <Button
                android:id="@+id/bt_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11、打开微信"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bt_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12、RecyclerView更多及收起"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bt_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13、下拉刷新"/>

            <Button
                android:id="@+id/bt_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14、自定义加载动画"/>

            <Button
                android:id="@+id/bt_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15、引入自定义SDK"/>

            <Button
                android:id="@+id/bt_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16、Ijkplayer直播"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bt_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17、Vitamio直播"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bt_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18、二级联动"/>

            <Button
                android:id="@+id/bt_19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="19、Touch事件分发"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bt_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20、Collapsble可折叠式标题栏"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bt_21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21、GridView网格布局"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bt_22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22、树状列表"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bt_23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23、自定义动画"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bt_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24、动态广播强制下线"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/bt_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25、自定义弹框——事件监听及回调"
                android:textAllCaps="false"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>