<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context=".activity.AnimatorActivity">

    <com.example.projectdemo.customview.StepAnimatorView
        android:id="@+id/step_animator_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:outerColor="@color/red"
        app:innerColor="@color/colorPrimary"
        app:borderWidth="50px"
        app:stepTextColor="@color/colorAccent"
        app:stepTextSize="60sp"/>

</LinearLayout>